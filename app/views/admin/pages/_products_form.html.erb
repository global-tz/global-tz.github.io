
<%= form_for [:admin, @category, @page] do |f| %>

  <div class="form-control-static">
    <%= f.text_field :title, :placeholder => "标题", :class => "form-control" %>
  </div>

  <div class="form-control-static form-control margin-bottom-10">
    <%= f.file_field :photo, :placeholder => "上传产品图片" %>
  </div>

  <%= f.kindeditor :content %>

  <div class="form-control-static">
    <%= f.submit "保存", :class => "btn btn-primary" %>
  </div>

<% end %>