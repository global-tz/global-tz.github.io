
<% breadcrumb :user, @user %>

<div class="page-header">
  <h3>用户详情</h3>
</div>

<table class="table table-bordered">
  <tr>
    <td>角色</td>
    <td><%= @user.role %></td>
  </tr>
  <tr>
    <td>登录名</td>
    <td><%= @user.login %></td>
  </tr>
  <tr>
    <td>昵称</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td></td>
    <td>
      <%= link_to edit_admin_user_path(@user) do %>
        <i class="fa fa-edit"></i> 修改资料
      <% end %>
    </td>
  </tr>
</table>